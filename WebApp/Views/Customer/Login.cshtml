
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-6 col-md-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">
                                        به رمان فارسی خوش آمدید

                                    </h1>
                                    <br />
                                    <div class="text-danger text-center">
                                        @ViewBag.Message
                                    </div>
                                </div>
                                @using (Html.BeginForm("Login", "Customer", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, false, new { @class = "user" }))
                                {
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" name="username" id="username" aria-describedby="emailHelp" placeholder="نام کاربری یا ایمیل">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user" name="password" id="password" placeholder="رمز عبور">
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        ورود
                                    </button>
                                    <hr>

                                }
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="#">رمز عبورم را فراموش کرده ام</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/ثبت-نام-مخاطب">ثبت نام</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

