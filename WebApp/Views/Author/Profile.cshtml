@model PersianNov.DataStructure.Author
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}


<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <div class="text-danger text-center">
                                    @ViewBag.Message
                                </div>
                            </div>
                            <form class="user" method="post" action="/Author/Profile">
                                <input type="hidden" asp-for="Id"/>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" asp-for="FirstName" placeholder="نام">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" asp-for="LastName" placeholder="نام خانوادگی">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" asp-for="Email" placeholder="ایمیل">
                                </div>
                                <div class="form-group">
                                    <input type="number" maxlength="11" class="form-control form-control-user" asp-for="Phone" placeholder="موبایل">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    دخیره
                                </button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

