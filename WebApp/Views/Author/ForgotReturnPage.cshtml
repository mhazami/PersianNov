@model PersianNov.DataStructure.Author
@{
    ViewData["Title"] = "ForgotReturnPage";
    Layout = "~/Views/Shared/_AuthorLoginLayout.cshtml";
}

<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">
                                    به رمان فارسی خوش آمدید
                                </h1>
                                <br />
                                <div class="text-danger text-center">
                                    @ViewBag.Message
                                </div>
                            </div>
                            <form class="user" method="post" action="/Author/ForgotReturnPage">
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" name="Password" id="Password" placeholder="رمز عبور">

                                </div>
                                <div class="form-group">

                                    <input type="password" class="form-control form-control-user" name="RepeatPassword" id="RepeatPassword" placeholder="تکرار رمز عبور">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    اعمال
                                </button>

                            </form>
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>