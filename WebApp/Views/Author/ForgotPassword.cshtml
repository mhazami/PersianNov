@model string
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthorLoginLayout.cshtml";
}

    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-6 col-md-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">رمز عوبر خود را فراموش کرده اید؟</h1>
                                    <p class="mb-4">
                                        جهت بازیابی رمزعبور خود لطفا باید از طریق لینک ارسالی به ایمیل خود اقدام نمایید. لطفا آدرس ایمیل خود را وارد نمایید
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model))
                                    {
                                        <br />
                                        <div class="text-@ViewBag.Message text-center">
                                            @Model
                                        </div>
                                    }
                                </div>
                                <form class="user" method="post" action="/author/ForgotPassword">
                                    <div class="form-group">
                                        <input type="text" name="email" class="form-control form-control-user" placeholder="ایمیل">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        بازیابی
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-action="Register">ثبت نام</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-action="Login">قبلا ثبت نام کرده اید ؟ وارد شوید</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

