<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <a href="#" title="Telegram">
                    <i class="fa fa-telegram"></i>
                </a>
                <a class="instagram" title="Instagram" href="#">
                    <i class="fa fa-instagram"></i>
                </a>

            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse rtl">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">تازه ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">کتابخانه</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">همکاری با ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">تماس باما</a>
                    </li>

                    <li class="nav-item nav-btn">
                        <a class="text-white nav-link btn-register" asp-area="" asp-controller="Home" asp-action="Index">ثبت نام</a>
                    </li>
                    <li class="nav-item nav-btn">
                        <a class="text-white nav-link  btn-login" asp-area="" asp-controller="User" asp-action="Login">ورود</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-6 col-lg-6 col-md-6">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">به رمان فارسی خوش آمدید
                                        <br />
                                        (پنل نویسندگان)
                                        </h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="نام کاربری یا ایمیل">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="رمز عبور">
                                        </div>
                                        
                                        <a href="#" class="btn btn-primary btn-user btn-block">
                                            ورود
                                        </a>
                                        <hr>
                                        <a href="#" class="btn btn-google btn-user btn-block">
                                            ورود به پنل نویسندگان
                                        </a>
                                        <a href="#" class="btn btn-facebook btn-user btn-block">
                                            ورود به پنل ناشر
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">رمز عبورم را فراموش کرده ام</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">ثبت نام</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
            @RenderBody()
       
</body>
</html>
